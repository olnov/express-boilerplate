{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/app.js",
    "build": "tsc",
    "lint": "eslint --ext .ts,.js src",
    "lint:fix": "eslint --ext .ts,.js src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "prepare": "husky"
  },
  "author": "Oleg Novikov",
  "license": "MIT",
  "description": "Boilerplate for Express.js applications",
  "dependencies": {
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.15.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
